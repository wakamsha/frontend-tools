{
  "name": "@wakamsha/stylelint-config",
  "version": "4.0.5",
  "description": "wakamsha's Stylelint rules as an extensible shared config.",
  "exports": {
    "./*": "./configs/*"
  },
  "type": "module",
  "engines": {
    "node": ">=18.12.0"
  },
  "files": [
    "configs"
  ],
  "scripts": {
    "lint": "eslint './**/*.@(js|ts|tsx)'",
    "test:snapshot": "vitest",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wakamsha/frontend-tools.git",
    "directory": "packages/stylelint-config"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "style best practices",
    "css in js"
  ],
  "author": "wakamsha <wakamsha@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wakamsha/frontend-tools/issues"
  },
  "homepage": "https://github.com/wakamsha/frontend-tools/tree/main/packages/stylelint-config#readme",
  "dependencies": {
    "postcss": "^8.4.49",
    "postcss-styled-syntax": "^0.7.0",
    "stylelint-config-recess-order": "^7.0.0",
    "stylelint-config-standard": "^40.0.0"
  },
  "devDependencies": {
    "@types/node": "24.10.9",
    "@wakamsha/eslint-config": "workspace:^",
    "eslint": "9.39.2",
    "release-config": "workspace:*",
    "semantic-release": "25.0.2",
    "stylelint": "17.0.0",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "peerDependencies": {
    "stylelint": "^16.13.0 || ^17.0.0"
  }
}
